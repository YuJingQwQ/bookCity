<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yt.boot.dao.OrderMapper">
    <select id="getOrders" resultMap="myResultMap">
        select *
        from t_order
    </select>

    <select id="getOrdersNumber" resultType="integer">
        select count(*)
        from t_order
    </select>

    <select id="getOrder" resultMap="myResultMap">
        select *
        from t_order
        <where>order_id = #{orderId}</where>
    </select>

    <resultMap id="myResultMap" type="com.yt.boot.pojo.Order">
        <id property="orderId" column="order_id"></id>
        <result property="userId" column="user_id"></result>
        <result property="price" column="price"></result>
        <result property="createDateTime" column="create_date_time"></result>
        <result property="status" column="status"></result>
    </resultMap>
</mapper>